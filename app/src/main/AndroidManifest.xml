<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_remindme"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_remindme_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RemindmeV2"
        tools:targetApi="31">
        <activity
            android:name=".RecuperarContrasenaActivity"
            android:exported="false" />
        <!-- Splash: es el launcher (pantalla inicial) -->
        <activity
            android:name=".ActividadSplash"
            android:exported="true"
            android:theme="@style/Theme.RemindmeV2.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Actividad principal con botones -->
        <activity android:name=".Actividad_Principal" /> <!-- Otras pantallas -->
        <activity android:name=".ActividadLogin" />
        <activity android:name=".ActividadRegistro" />
        <activity android:name=".ActividadInfoApp" />
    </application>

</manifest>